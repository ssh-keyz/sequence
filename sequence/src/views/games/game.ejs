<!DOCTYPE html>
<html lang="en">
  <%- include ('../partials/head') %>
  <body class="bg-gray-800 min-h-screen">
    <div class="container mx-auto px-4 py-8">
      <div class="bg-gray-700 rounded-lg p-8 text-white">
        <div class="flex justify-between items-center mb-8">
          <h1 class="text-4xl font-bold">Game #<%= gameId %></h1>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Game Board -->
          <div class="col-span-2">
            <div id="game-board" class="grid grid-cols-10 gap-1">
              <!-- Game board will be populated by JavaScript -->
            </div>
          </div>

          <!-- Player Info and Chat -->
          <div>
            <div class="bg-gray-600 p-4 rounded mb-4">
              <h2 class="text-2xl font-bold mb-4">Players</h2>
              <div id="players-list" class="space-y-2">
                <!-- Players will be populated by JavaScript -->
              </div>
            </div>

            <div class="bg-gray-600 p-4 rounded">
              <h2 class="text-2xl font-bold mb-4">Chat</h2>
              <div id="chat-messages" class="h-48 overflow-y-auto mb-4 space-y-2">
                <!-- Chat messages will be populated by JavaScript -->
              </div>
              <form id="chat-form" class="flex gap-2">
                <input
                  type="text"
                  id="chat-input"
                  class="flex-1 px-3 py-2 bg-gray-700 rounded"
                  placeholder="Type a message..."
                />
                <button
                  type="submit"
                  class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600"
                >
                  Send
                </button>
              </form>
            </div>
          </div>
        </div>

        <!-- Player's Hand -->
        <div class="mt-8">
          <h2 class="text-2xl font-bold mb-4">Your Hand</h2>
          <div id="player-hand" class="flex gap-4 flex-wrap">
            <!-- Player's cards will be populated by JavaScript -->
          </div>
        </div>
      </div>
    </div>

    <!-- Card Templates -->
    <template id="card-template">
      <div class="card bg-white text-black rounded p-2 w-24 h-32 flex flex-col items-center justify-center cursor-pointer hover:bg-gray-100">
        <span class="text-2xl"></span>
      </div>
    </template>

    <template id="player-template">
      <div class="player flex items-center gap-2 p-2 rounded">
        <img class="w-8 h-8 rounded-full" src="" alt="" />
        <span class="flex-1"></span>
        <span class="text-sm text-gray-300"></span>
      </div>
    </template>

    <!-- Scripts -->
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/games.js"></script>
  </body>
</html>
